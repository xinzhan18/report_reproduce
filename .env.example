# =============================================================================
# LLM API Configuration
# =============================================================================

# Default LLM Provider (anthropic, openai, custom)
DEFAULT_LLM_PROVIDER=anthropic

# Default Authentication Method (api_key, oauth, bearer_token)
DEFAULT_AUTH_METHOD=api_key

# =============================================================================
# Anthropic (Claude) Configuration
# =============================================================================

# API Key Authentication (Recommended)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OAuth Authentication (if supported in future)
# ANTHROPIC_CLIENT_ID=your_client_id
# ANTHROPIC_CLIENT_SECRET=your_client_secret
# ANTHROPIC_REDIRECT_URI=http://localhost:8080/callback

# =============================================================================
# OpenAI (GPT) Configuration
# =============================================================================

# API Key Authentication
OPENAI_API_KEY=your_openai_api_key_here

# OAuth Authentication (for enterprise/secure deployments)
OPENAI_CLIENT_ID=your_openai_client_id
OPENAI_CLIENT_SECRET=your_openai_client_secret
OPENAI_REDIRECT_URI=http://localhost:8080/callback

# Direct Access Token (if you already have one)
# OPENAI_ACCESS_TOKEN=your_access_token_here

# Per-Agent API Keys (Optional - allows different keys/models per agent)
# Format: AGENT_NAME_API_KEY, AGENT_NAME_LLM_PROVIDER, AGENT_NAME_MODEL_ID

# Ideation Agent - Literature review and hypothesis generation
IDEATION_API_KEY=your_ideation_api_key_here
IDEATION_LLM_PROVIDER=anthropic
IDEATION_MODEL_ID=claude-sonnet-4-5-20250929
IDEATION_TEMPERATURE=0.7
IDEATION_MAX_TOKENS=4000

# Planning Agent - Experiment design
PLANNING_API_KEY=your_planning_api_key_here
PLANNING_LLM_PROVIDER=anthropic
PLANNING_MODEL_ID=claude-sonnet-4-5-20250929
PLANNING_TEMPERATURE=0.3
PLANNING_MAX_TOKENS=3000

# Experiment Agent - Code generation and execution
EXPERIMENT_API_KEY=your_experiment_api_key_here
EXPERIMENT_LLM_PROVIDER=anthropic
EXPERIMENT_MODEL_ID=claude-sonnet-4-5-20250929
EXPERIMENT_TEMPERATURE=0.2
EXPERIMENT_MAX_TOKENS=4000

# Writing Agent - Report generation
WRITING_API_KEY=your_writing_api_key_here
WRITING_LLM_PROVIDER=anthropic
WRITING_MODEL_ID=claude-sonnet-4-5-20250929
WRITING_TEMPERATURE=0.4
WRITING_MAX_TOKENS=4000

# =============================================================================
# Financial Data API Keys
# =============================================================================

# Alpha Vantage (Stock data)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Quandl (Economic data)
QUANDL_API_KEY=your_quandl_key_here

# =============================================================================
# Academic Database API Keys
# =============================================================================

# SSRN (Social Science Research Network)
SSRN_API_KEY=your_ssrn_key_here

# IEEE Xplore
IEEE_API_KEY=your_ieee_key_here

# ACM Digital Library
ACM_API_KEY=your_acm_key_here

# =============================================================================
# Project Configuration
# =============================================================================

PROJECT_ROOT=F:\shuxu\report_reproduce
DATA_DIR=data
OUTPUT_DIR=outputs

# Citation Style (APA, IEEE, Chicago, Harvard, Vancouver)
CITATION_STYLE=APA

# PDF Download and Caching
PDF_CACHE_ENABLED=true
PDF_CACHE_DIR=data/literature/pdfs
PDF_AUTO_DOWNLOAD=true

# =============================================================================
# Iteration and Memory Settings
# =============================================================================

# Maximum iterations per project
MAX_ITERATIONS=5

# Minimum improvement threshold to continue iterating
IMPROVEMENT_THRESHOLD=0.05

# Memory retention (days)
MEMORY_RETENTION_DAYS=365

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/research_automation.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Database logging
DB_LOG_ENABLED=true

# API call logging
API_LOG_ENABLED=true
